<!-- views/error404.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Erro 404 - Página não encontrada</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Se você tiver um arquivo de estilo separado -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #726565d0;
            margin: 0;
            padding: 0;
            text-align: center;
            padding: 50px;
        }

        h1 {
            color: #333;
        }

        p {
            color: #666;
        }

        .error-container {
            background-color: #28d818; /* Cor de fundo do contêiner */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: auto;
            max-width: 400px;
        }
    </style>
</head>
<body>
    <%- include ('cabecalho.ejs') %>
    <div class="error-container">
        <h1>Erro 404 - Página não encontrada</h1>
        <p>A página solicitada não foi encontrada: <%= url %></p>
    </div>
</body>
</html>